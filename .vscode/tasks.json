{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Angular Frontend",
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": {
        "owner": "custom",
        "fileLocation": ["relative", "${workspaceFolder}/frontend"],
        "pattern": {
          "regexp": ".*"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Watch mode enabled\\. Watching for file changes\\.\\.\\."
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
